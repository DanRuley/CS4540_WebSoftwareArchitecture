@using URC.Controllers
@model List<Event>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Title with U of U Logo-->
<body class="opp_page" id="home_pg">
    <div class="home_container" id="hc">
        <table class="header" id="home_h">
            <tbody>
                <tr>
                    <td width="85%">
                        URC Home Page
                    </td>
                    <td>
                        <img src="/images/uofu.jpg" alt="UofU Logo" />
                    </td>
                </tr>
            </tbody>
        </table>

        <!-- Bootstrap Jumbotron greeting -->
        <div class="jumbotron" id="home_jumbo" style="height: 25%; background-color: #f3ffff; box-shadow: 5px 8px #888888; border: 3px solid black;">

            <h1 class="nicep" style="font-size: 50px">Welcome to the URC!</h1>
            <br />
            <p class="nicep">The Undergraduate Research Coordinator is a tool designed to help undergraduate Computer Science students connect with professors doing research at the University of Utah.</p>
            <br />
            <hr class="my-4">
            <div class="row">

                <p class="nicep" style="font-size:20px; padding: 10px">Click the link to start viewing available research opportunities.</p>


                <a button type="button" href="/ResearchOpportunities/Index" class="btn btn-primary" style="margin-left:100px; padding: 20px; box-shadow: #3f3f3f 2px 4px;">Discover Research Opportunities</a button>
            </div>
        </div>



        <!-- Bootstrap carousel for testimonials -->
        <div id="quoteCarosel" class="carousel slide" data-ride="carousel" style="margin-bottom:50px; margin-top: 50px">
            <ol class="carousel-indicators">
                <li data-target="#quoteCarosel" data-slide-to="0" class="active"></li>
                <li data-target="#quoteCarosel" data-slide-to="1"></li>
                <li data-target="#quoteCarosel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/Cool_BG.png" style="height: 300px; border-radius: 2px; border: 3px solid black;" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h2 style="font-style: italic; text-shadow: 2px 2px 2px #3c1212; padding: 30px">"Finding a Professor to do research with can be such a drag.  With the URC it was a breeze!"</h2>
                        <br />
                        <h5>-Generic T Student</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/Cool_BG_2.jpg" style="height: 300px; border-radius: 2px; border: 3px solid black;" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h2 style="font-style: italic; text-shadow: 2px 2px 2px #3c1212; padding: 30px;">"Without the URC I never would have gotten into Grad. school!"</h2>
                        <br />
                        <h5>-Generic P Student</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/Cool_BG_3.jpg" style="height: 300px; border-radius: 2px; border: 3px solid black;" class="d-block w-100" alt="...">

                    <div class="carousel-caption d-none d-md-block">
                        <h2 style="font-style: italic; text-shadow: 2px 2px 2px #3c1212; padding: 30px;">"The URC tool has directly led to valuable contributions from Undergraduates and benefitted my research considerably."</h2>
                        <h5>-Professor Placeholder</h5>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#quoteCarosel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#quoteCarosel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="container jumbotron" style="color: white; background: rgba(100,100,100,0.9); border: 3px solid black;">
            <div class="row text-center" >
                <div class="col-md-auto" style="text-align:left">
                    <h4>Calendar</h4>
                    <div id="cal" class="container">
                        @for (int i = 0; i < 4; i++)
                        {
                        <div class="row border border-dark" >
                            <div class="col-6" style="background-color: #7E98B6;" >
                                <div style="display:inline-block; vertical-align:baseline; padding: 5px;" >
                                    @Model[i].Date
                                </div>
                            </div>
                            <div class="col" style="background-color: #E3E3E1;color: #464646; padding: 5px;">
                                @Model[i].Title
                            </div>
                        </div>  
                        }
                        
                        
                    </div>
                </div>
                <div class="col">
                    <div style="display:inline-block;text-align:left">
                        <h4>Site Links</h4>
                        <ul style="list-style-type:none;margin:0;padding:0">
                            <li><a href="/Home/Index" style="color:white">Home</a></li>
                            <li><a href="/ResearchOpportunities/Index" style="color:white">Research Opportunities</a></li>
                            <li><a href="https://www.cs.utah.edu/advising" style="color:white">UofU Undergraduate Advising</a></li>
                            <li><a href="/Home/Privacy/Index" style="color:white">Privacy Policy</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col">
                    <div style="display:inline-block;text-align:left">
                        <h4>Contact</h4>
                        <ul style="list-style-type:none;margin:0;padding:0">
                            <li>URC - Undergraduate Research Coordinator</li>
                            <li>Salt Lake City</li>
                            <li>Phone: 801-555-4433</li>
                        </ul>
                    </div>
                </div>
            
        </div>

    </div>
</body>