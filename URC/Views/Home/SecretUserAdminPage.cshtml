@using Microsoft.AspNetCore.Identity

@model IdentityUser[]
@inject UserManager<IdentityUser> UserManager
@inject RoleManager<IdentityRole> RoleManager

@{var allRoles = new string[] { "Administrator", "Professor", "Student" };}
@section Scripts


{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@9.17.2/dist/sweetalert2.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.3.5/dist/sweetalert2.all.min.js"></script>
}
<body class="page">
    <table class="opportunity">
        @foreach (var user in UserManager.Users)
        {
            <tr>
                <th>
                    User:
                </th>
                <td>
                    @user.UserName;
                </td>
                <td>
                    Click to delete
                </td>
                <td>
                    <div class="custom-control custom-switch" id="@user.Id">
                        <input data="@user.Id" style="cursor: pointer; margin-left: 20px" onclick="deleteUsr('@user.UserName', 'spaghetti')" class="role_DEL" type="button">
                    </div>

                </td>
            </tr>

        }
    </table>
</body>
